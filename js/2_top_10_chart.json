{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "data": {
     "url": "https://raw.githubusercontent.com/chandra-aditya/Homework10/main/data/death-rates-from-air-pollution.csv"
  },
  "encoding": {
    "y": {"field": "Entity", "type": "nominal","title":"Country", "sort": {"op": "sum", "field": "Total_Death", "order":"descending"}},
    "x": {"field": "Total_Death", "type": "quantitative"},
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Country"},
      {"field": "Total_Death", "type": "quantitative", "title": "Total Deaths"}
    ]
  },
   "params": [
      {
        "name": "year",
        "value": 2017,
        "bind": {
          "input": "range",
          "min": 1990,
          "max": 2017,
          "step": 1,
          "name": "Select Year:"
        }
      }
    ],
    "transform": [
        {"filter": "datum.Year==year"},
        {
            "window": [{
                "op": "rank",
                "as": "rank"
                }],
                "sort": [{ "field": "Total_Death",
                "order": "ascending" }]
                }, 
        {"filter": "datum.rank <= 10"}
      ],
  "layer": [{
    "mark": "bar"
  }, {
    "mark": {
      "type": "text",
      "align": "left",
      "baseline": "middle",
      "dx": 3
    },
    "encoding": {
      "text": {"field": "Total_Death", "type":"quantitative","format": ".2f"}
    }
  }]
}
